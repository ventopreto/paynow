<%= form_with model: payment_method do |f| %>

<div class="row g-2">
  <div class="col-md-6">
    <%= f.label :name, "Nome", class:"form_label" %>
    <%= f.text_field :name , class:"form_controll" %>
  </div>
</div>

<div class="row g-2">
  <div class="col-md-6">
    <%= f.label :percentage_fee, "Taxa por cobrança em %", class:"form_label" %>
    <%= f.text_field :percentage_fee , class:"form_controll" %>
  </div>
</div>

<div class="row g-2">
  <div class="col-md-6">
    <%= f.label :percentage_fee, "Taxa máxima em reais", class:"form_label" %>
    <%= f.text_field :percentage_fee , class:"form_controll" %>
  </div>
</div>

<div class="row g-2">
  <div class="col-md-6">
    <%= f.submit button_text,  class:"btn btn-outline-dark btn-sm" %>
    <%= link_to t('links.back'), admin_root_path, class:"btn btn-outline-dark btn-sm" %>
  </div>
</div>
<% end %>