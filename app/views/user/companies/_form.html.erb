
<div class="card mx-auto" style="width: 15rem;">
  <div class="card-body">
<%= form_with model: [:user , company] do |f| %>
  <% if company.errors.any? %>
      <ul>
        <% company.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



    <%= f.label :cnpj, "CNPJ", class:"form_label" %>
    <%= f.text_field :cnpj , class:"form_controll" %>






    <%= f.label :corporate_name, "Razão Social", class:"form_label" %>
    <%= f.text_field :corporate_name , class:"form_controll" %>




    <%= f.label :billing_address, "Endereço de faturamento", class:"form_label" %>
    <%= f.text_field :billing_address , class:"form_controll" %>



    <%= f.label :email, "E-mail para faturamento", class:"form_label" %>
    <%= f.text_field :email , class:"form_controll" %>



    <%= f.submit button_text,  class:"btn btn-outline-dark btn-sm" %>
    <%= link_to t('links.back'), root_path, class:"btn btn-outline-dark btn-sm" %>


<% end %>
  </div>
</div>

