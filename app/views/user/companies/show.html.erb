
  <div class="card border border-5 mt-3" style="width: 27rem;">
  <div class="card-body">
  <h5 class="card-title">Nome: <%= @company.cnpj %> </h5>
  <p class="card-text">Razão Social:   <%= @company.corporate_name %> </p>
  <p class="card-text">Endereço de Faturamento:   <%= @company.billing_address %> </p>
  <p class="card-text">Dominio da empresa:  <%= @company.email_domain %> </p>
  <p class="card-text">Token:  > <%= @company.token %> </p>

  <% if current_user.admin? %>
  <%= link_to 'Gerar Novo Token', update_token_user_company_path, method: :patch, class:"btn btn-outline-dark" %>
  <% end %>
  <%= link_to 'Voltar', root_path, class:"btn btn-outline-dark" %>