<div class="container">
<div class="card mx-auto" style="width: 15rem;">
  <div class="card-body">
    <%= form_with url: url, model: [:user, company, product]  do |f| %>
        <%= f.label :name, "Nome do Produto", class:"form_label" %>
            <%= error_tag @product, :name %>
        <%= f.text_field :name, placeholder: 'produto exemplo' , class:"form_controll" %>

        <%= f.label :price, "PreÃ§o", class:"form_label" %>
            <%= error_tag @product, :price %>
        <%= f.number_field :price, placeholder: '10'  , class:"form_controll" %>

        <%= f.label :discount, "Desconto", class:"form_label" %>
            <%= error_tag @product, :discount %>
        <%= f.number_field :discount, placeholder: '10'  , class:"form_controll" %>

        <div class="input-group-btn">
          <%= f.submit button_text,  class:"btn btn-outline-success btn-sm mt-2" %>
          <%= link_to t('links.back'), root_path, class:"btn btn-outline-dark btn-sm mt-2" %>
      </div>
  <% end %>
</div>




