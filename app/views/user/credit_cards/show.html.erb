
  <div class="card border border-5 mt-3 mx-auto" style="width: 27rem;">
  <div class="card-body text-justify mx-auto">
    <% if @creditcard.payment_method.icon.attached?%>
  <%= image_tag @creditcard.payment_method.icon, size: "50x50", class:"mx-auto" %>
  <% end %>
    <h5>Nome: <%= @creditcard.category_with_name %></h5>
    <p class="card-text">Taxa(%): <%= @creditcard.payment_method.percentage_fee %> </p>
    <p class="card-text">Taxa Maxima: <%= number_to_currency(@creditcard.payment_method.max_fee) %> </p>
    <p class="card-text">Código Alfanumérico: <%= @creditcard.token%></p>

  <%= link_to 'Editar', edit_user_payment_method_credit_card_path(@creditcard), class:"btn btn-outline-dark" %>
  <%= link_to 'Voltar', user_company_chosen_payments_path(@company.token), class:"btn btn-outline-dark" %>
